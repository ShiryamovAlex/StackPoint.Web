FROM mcr.microsoft.com/dotnet/sdk:5.0 AS build-env
WORKDIR /app

# Copy csproj and restore as distinct layers
COPY StackPoint.Web/StackPoint.Web.csproj StackPoint.Web/
COPY StackPoint.Domain/StackPoint.Domain.csproj StackPoint.Domain/
RUN dotnet restore ./StackPoint.Web/StackPoint.Web.csproj

# Copy everything else and build
COPY StackPoint.Web/* StackPoint.Web/
COPY StackPoint.Domain/* StackPoint.Domain/
RUN dotnet publish --no-restore -c Release -o out ./StackPoint.Web/StackPoint.Web.csproj

# Build runtime image
FROM mcr.microsoft.com/dotnet/aspnet:3.1
WORKDIR /app
COPY --from=build-env /app/out .
ENTRYPOINT ["dotnet", "StackPoint.Web.dll"]