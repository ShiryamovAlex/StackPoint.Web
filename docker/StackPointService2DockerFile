FROM mcr.microsoft.com/dotnet/sdk:5.0 AS build-env
WORKDIR /app

# Copy csproj and restore as distinct layers
COPY StackPoint.Service2/StackPoint.Service2.csproj StackPoint.Service2/
COPY StackPoint.Domain/StackPoint.Domain.csproj StackPoint.Domain/
COPY StackPoint.Data/StackPoint.Data.csproj StackPoint.Data/
RUN dotnet restore ./StackPoint.Service2/StackPoint.Service2.csproj

# Copy everything else and build
COPY StackPoint.Service2/* StackPoint.Service2/
COPY StackPoint.Domain/* StackPoint.Domain/
COPY StackPoint.Data/* StackPoint.Data/
RUN dotnet publish --no-restore -c Release -o out ./StackPoint.Service2/StackPoint.Service2.csproj

# Build runtime image
FROM mcr.microsoft.com/dotnet/aspnet:3.1
WORKDIR /app
COPY --from=build-env /app/out .
ENTRYPOINT ["dotnet", "StackPoint.Service2.dll"]